if [ -z $CINDER_PATH ]; then
  echo "CINDER_PATH must be defined!"
else
  if [ -z $NDK_MODULE_PATH ]; then
    export NDK_MODULE_PATH=$CINDER_PATH/android/prebuilt
    echo "NDK_MODULE_PATH set to $NDK_MODULE_PATH"
  fi

  android update project --path . --name Scalability --target android-10

  echo "Ready to run ndk-build && ant"
fi
